% data size
Nx = 128;
Ny = 128;
Nz = 1;


% Shift 
x_shift = 1;

%% System specification
lambda  = 532e-9;  % wavelength 
pps     = 10e-6;   % pixel pitch of the hologram 
z0      = 60e-3;   % 40, distance from detector to center of the object 

Lx = Nx*pps;  % size of detector (um)
NA = Lx/2/sqrt(z0^2+(Lx/2)^2)

% Resolution of diffraction limits
res_z = 2*lambda/(NA^2)
res_x = 0.61-lambda/2/NA
% res_x = 1.22*lambda/Lx

dz = 1e-3;
z_depth = round(res_z/dz/2)
% dz = res_z/2

% dz = 0.2*dz

%% Indirect parameters
% Center of the object is located at the origin of the coordinates, z0 is the location of the
% hologram
z = z0 - ((1:Nz)- round(Nz/2))*dz;

z_axis = (z - z0)*1e3;

rp = res_x/pps/2   % radius of a point